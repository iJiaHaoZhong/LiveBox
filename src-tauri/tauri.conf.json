{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "LiveBox",
        "version": "0.0.3"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "http": {
                "all": true,
                "scope": ["https://*"]
            },
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "Livebox",
                "width": 900,
                "height": 600
            }
        ],
        "security": {
            "csp": null,
            "dangerousRemoteDomainIpcAccess": [
                {
                    "domain": "live.douyin.com",
                    "enableTauriAPI": true
                },
                {
                    "domain": "www.douyin.com",
                    "enableTauriAPI": true
                },
                {
                    "domain": "douyin.com",
                    "enableTauriAPI": true
                }
            ]
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.live.box",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
